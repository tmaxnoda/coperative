@model IEnumerable<CyberCooperative_Model.LoanTrasactionTimeline>

@{

    Layout = "~/Views/Shared/_listOfEmployeeViews.cshtml";
}

<button class="btn btn-inverse btn-label"><i class="fa fa-archive"></i> Loan timeLine</button> 
<hr />
<hr />
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="myTable">

    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Loan Period
            </th>
            <th>
               updated month
            </th>
            <th>
                Loan due
            </th>
            <th>
                Paid loan
            </th>
            <th>
               Loan bal
            </th>
                                          
            <th>
                Active?
            </th>
            <th>
                Action
            </th>


        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr class="odd gradeX">
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Loan_Table.RepaymentPeriod
                </td>
                <td>

                    @Convert.ToDateTime(item.Month).ToString("MMM-yyy")
                </td>
                
                <td>
                    @*@item.TotalLoandue*@
                    @Convert.ToDecimal(item.TotalLoandue).ToString("#,##0.00")
                </td>
                <td>
                    @*@item.TotalLoanPaid*@
                    @Convert.ToDecimal(item.TotalLoanPaid).ToString("#,##0.00")
                </td>
                <td>
                    @*@item.BalanceTobePaid*@
                    @Convert.ToDecimal(item.BalanceTobePaid).ToString("#,##0.00")
                </td>
               
                <td>
                    @item.Status
                </td>
                <td>
                    <div class="btn-group">
                        @*<a class="btn btn-default" href="#">Actions</a>*@
                        <a class="btn btn-info dropdown-toggle" aria-expanded="false" href="#" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @*<li><a href='@Url.Action("Details", "LoanTimeline",new { id=item.Id})'>Details</a></li>
                                <li><a href='@Url.Action("Delete","LoanTimeline",new { id=item.Id})'>Delete</a></li>
                            <li><a href='@Url.Action("Edit", "LoanTimeline",new { id=item.Id})'>Edit</a></li>*@

                            <li><a class="btn btn-info" href='@Url.Action("Details","LoanTimeline",new { id=item.Id})'><i class="fa fa-info-circle fa-spin fa-3x fa-fw" aria-hidden="true"></i></a></li>
                            <li><a class="btn btn-warning" href='@Url.Action("Edit","LoanTimeline",new { id=item.Id})'><i class="fa fa-edit fa-spin fa-3x fa-fw" aria-hidden="true"></i></a></li>
                           


                        </ul>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
