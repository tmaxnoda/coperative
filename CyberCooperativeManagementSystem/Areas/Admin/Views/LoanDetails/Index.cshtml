@using CyberCooperative_Model
@model IEnumerable<Loan_Table>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_listOfEmployeeViews.cshtml";
}

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="myTable">

    <thead>
        <tr>
            <th>
                Name
            </th>
            
            <th>
                Amt Borrowed
            </th>
            <th>
                Interest
            </th>
            <th>
                Months
            </th>
            <th>
                Loan due
            </th>
            <th>
                Repayment
            </th>

            <th>
                Starts
            </th>

            <th>
                End
            </th>
           
           
            <th>
                IsActive?
            </th>


        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr class="odd gradeX">
                <td>
                    @item.Name
                </td>
                
                <td>
                    @Convert.ToDecimal(item.AmountBorrowed).ToString("#,##0.00")
                    @*@item.AmountBorrowed*@
                </td>

                <td>
                    @*@item.RepaymentInterest*@
                    @Convert.ToDecimal(item.RepaymentInterest).ToString("#,##0.00")
                </td>
                <td>
                    @*@Convert.ToDecimal(item.RepaymentPeriod).ToString("#,##0.00")*@
                    @item.RepaymentPeriod
                </td>
                <td>
                    @*@item.TotalLoanDue*@
                    @Convert.ToDecimal(item.TotalLoanDue).ToString("#,##0.00")
                </td>

                <td>
                    @*@item.TotalMonthlyRepaymentWithContributions*@
                    @Convert.ToDecimal(item.TotalMonthlyRepaymentWithContributions).ToString("#,##0.00")
                </td>
                <td>
                    @Convert.ToDateTime(item.MonthBegin).ToString("MMM-yyy")
                    @*@item.MonthBegin*@
                </td>
                <td>
                    @Convert.ToDateTime(item.MonthEnding).ToString("MMM-yyy")
                    @*@item.MonthEnding*@
                </td>
                <td>
                    @item.loanStatus
                </td>
                @*<td>
                        <div class="btn-group">
                            <a class="btn btn-default" href="#">Actions</a>
                            <a class="btn btn-info dropdown-toggle" aria-expanded="false" href="#" data-toggle="dropdown"><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href='@Url.Action("Details", "Loan_RepaymentController",new { id=item.Id})'>Details</a></li>
                                <li><a href='@Url.Action("Delete","LoanTimeline",new { id=item.Id})'>Delete</a></li>
                                <li><a href='@Url.Action("Edit", "LoanTimeline",new { id=item.Id})'>Edit</a></li>




                            </ul>
                        </div>
                    </td>*@
            </tr>

        }
    </tbody>
</table>


