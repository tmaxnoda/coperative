@model IEnumerable<CyberCooperative_Model.ContributionPattern_history_Table>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_listOfEmployeeViews.cshtml";
}
<button class="btn btn-inverse btn-label"><i class="fa fa-archive"></i> Contribution pattern history</button> 
<hr />
<hr />
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="myTable">

    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Reg Num
            </th>
            <th>
                Account Num
            </th>

            <th>
                Amount
            </th>
            
            <th>
                Month
            </th>
            <th>
                Year
            </th>
            <th>
                Action
            </th>
            

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr class="odd gradeX">
                <td>
                    @item.FullName
                </td>

                <td>

                    @item.RegistrationNumber
                </td>

                <td>
                    @item.AccountNumber
                </td>
                <td>
                    @*@item.Amount*@
                    @Convert.ToDecimal(@item.Amount).ToString("#,##0.00")
                </td>
                <td>
                    @item.Month
                </td>

                <td>
                    @*@Convert.ToDateTime(@item.Year).ToString("MMM-yyy")*@
                    @item.Year
                </td>
               
                <td>
                    <div class="btn-group">
                        @*<a class="btn btn-default" href="#">Actions</a>*@
                        <a class="btn btn-info dropdown-toggle" aria-expanded="false" href="#" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @*<li><a href='@Url.Action("Details", "ContributionPattern",new { id=item.Id})'>Details</a></li>
                            <li><a href='@Url.Action("Delete","ContributionPattern",new { id=item.Id})'>Delete</a></li>
                            <li><a href='@Url.Action("Edit", "ContributionPattern",new { id=item.Id})'>Edit</a></li>*@

                            <li><a class="btn btn-info" href='@Url.Action("Details","ContributionPattern",new { id=item.Id})'><i class="fa fa-info-circle fa-spin fa-3x fa-fw" aria-hidden="true"></i></a></li>
                            <li><a class="btn btn-warning" href='@Url.Action("Edit","ContributionPattern",new { id=item.Id})'><i class="fa fa-edit fa-spin fa-3x fa-fw" aria-hidden="true"></i></a></li>
                            <li>
                                @*<div class="delete-section">*@
                                @*<a class="delete-link" href="@Url.Action("Delete", new {id = item.Id})">Delete</a>*@
                                <a class="btn btn-danger" href='@Url.Action("Delete","ContributionPattern",new { id=item.Id})'><i class="fa fa-trash-o fa-spin fa-3x fa-fw" aria-hidden="true"></i></a>
                                @*<div class="btn btn-primary delete-confirm" style="display:none" data-delete-id="@item.Id">Confirm Delete</div>*@
                                @*</div>*@

                            </li>



                        </ul>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>


