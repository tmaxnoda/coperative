@model IEnumerable<CyberCooperative_Model.Transaction_Table>
@{
    Layout = "~/Views/Shared/_listOfUserViews.cshtml";
}

@if (ViewBag.displayMenu == "Yes")
{
    <h1>Welcome Admin. Now you can create user Role.</h1>  
    
    <h3>
        <li>@Html.ActionLink("Manage Role", "Index", "Role")</li>
    </h3>  
}
else
{

     <h3>Welcome:</h3> <button class="btn btn-inverse btn-label"><i class="fa fa-check"></i> @ViewBag.Name  :) </button> 
    @*<h2>  Welcome <h4>@ViewBag.Name</h4> :) .We will add user module soon </h2>*@
    <br />  
    @*@Html.Partial("_listOfTransactions",Model)
    <h2>Create a Post</h2>*@
    @*@Html.Partial("_PostForm", Model)*@

    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="myTable">
        <thead>
            <tr>
                <th>
                   Name
                </th>
                <th>
                    Account Number
                </th>
                <th>
                    Month
                </th>
                <th>
                    Year
                </th>
                <th>
                    Amount
                </th>


            </tr>
        </thead>
        <tbody>
           
            @foreach (var item in Model)
            {

                <tr class="odd gradeX">
                    <td>
                        @item.FullName
                    </td>
                    <td>
                        @item.AccountNumber
                    </td>
                    <td>
                        @item.Month
                    </td>
                    <td>
                        @item.Year
                    </td>
                    <td>
                        @*@item.Amount*@
                        @Convert.ToDecimal(item.Amount).ToString("#,##0.00")
                    </td>
                </tr>

            }
        </tbody>
    </table>

}  